{
  "name": "blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "postinstall": "npm run typegen",
    "dev": "concurrently \"remix vite:dev\" \"panda --watch\"",
    "build": "panda && remix vite:build && esbuild [[path]].ts --bundle --minify --format=esm --outfile=functions/[[path]].js",
    "start": "wrangler pages dev ./build/client",
    "deploy": "wrangler pages deploy ./build/client",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "typegen": "wrangler types",
    "prepare": "panda codegen",
    "typecheck": "tsc",
    "fmt": "prettier --check --cache \"./app/**/*.{js,jsx,ts,tsx}\"",
    "fmt:fix": "prettier --write --cache \"./app/**/*.{js,jsx,ts,tsx}\"",
    "generate": "drizzle-kit generate:sqlite --schema=./app/.server/schema.ts --out=./migrations",
    "migrate": "pnpm wrangler d1 migrations apply blog-db",
    "migrate:preview": "pnpm wrangler d1 migrations apply blog-db-preview"
  },
  "dependencies": {
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/language": "^6.10.1",
    "@codemirror/language-data": "^6.4.1",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.26.1",
    "@jsquash/jpeg": "^1.4.0",
    "@jsquash/png": "^3.0.1",
    "@jsquash/resize": "^2.0.0",
    "@jsquash/webp": "^1.4.0",
    "@remix-run/cloudflare": "^2.8.1",
    "@remix-run/cloudflare-pages": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "drizzle-orm": "^0.30.7",
    "drizzle-zod": "^0.5.1",
    "gray-matter": "^4.0.3",
    "isbot": "^5.1.4",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-container": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "remix-auth": "^3.6.0",
    "remix-auth-github": "^1.7.0",
    "remix-utils": "^7.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240405.0",
    "@pandacss/dev": "^0.37.2",
    "@pandacss/studio": "^0.37.2",
    "@remix-run/dev": "^2.8.1",
    "@shikijs/markdown-it": "^1.2.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/markdown-it": "^14.0.0",
    "@types/markdown-it-container": "^2.0.10",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss-nested": "^6.0.1",
    "postcss-prune-var": "^1.1.2",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "shiki": "^1.2.4",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.3.2",
    "wrangler": "^3.48.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "gray-matter@4.0.3": "patches/gray-matter@4.0.3.patch"
    }
  }
}
