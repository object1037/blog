{
  "name": "blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prepare": "panda codegen",
    "build": "remix build",
    "dev": "remix dev --manual -c \"npm run start\"",
    "start": "wrangler pages dev --compatibility-date=2023-06-21 ./public --kv=SESSION_KV",
    "typecheck": "tsc",
    "fmt": "prettier --write \"./app/**/*.{js,jsx,ts,tsx}\"",
    "generate": "drizzle-kit generate:sqlite --schema=./app/schema.ts --out=./migrations",
    "migrate": "pnpm wrangler d1 migrations apply blog-db --local",
    "migrate:prod": "pnpm wrangler d1 migrations apply blog-db"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.1.0",
    "@remix-run/cloudflare-pages": "^2.1.0",
    "@remix-run/react": "^2.1.0",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "isbot": "^3.6.8",
    "markdown-it": "^13.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-github": "^1.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@pandacss/dev": "^0.16.0",
    "@remix-run/dev": "^2.1.0",
    "@remix-run/eslint-config": "^2.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/markdown-it": "^13.0.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.38.0",
    "prettier": "^3.0.3",
    "typescript": "^5.1.0",
    "wrangler": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "markdown-it@13.0.2": "patches/markdown-it@13.0.2.patch"
    }
  }
}