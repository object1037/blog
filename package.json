{
  "name": "blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prepare": "panda codegen",
    "build": "remix build",
    "dev": "remix dev --manual -c \"npm run start\"",
    "start": "wrangler pages dev --compatibility-date=2023-10-20 ./public --kv=SESSION_KV",
    "typecheck": "tsc",
    "fmt": "prettier --write \"./app/**/*.{js,jsx,ts,tsx}\"",
    "generate": "drizzle-kit generate:sqlite --schema=./app/schema.ts --out=./migrations",
    "migrate": "pnpm wrangler d1 migrations apply blog-db --local",
    "migrate:preview": "pnpm wrangler d1 migrations apply blog-db-preview",
    "migrate:prod": "pnpm wrangler d1 migrations apply blog-db"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.2.0",
    "@remix-run/cloudflare-pages": "^2.2.0",
    "@remix-run/react": "^2.2.0",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "gray-matter": "^4.0.3",
    "isbot": "^3.7.0",
    "markdown-it": "^13.0.2",
    "markdown-it-shikiji": "^0.6.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "remix-auth": "^3.6.0",
    "remix-auth-github": "^1.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@pandacss/dev": "^0.17.5",
    "@remix-run/dev": "^2.2.0",
    "@remix-run/eslint-config": "^2.2.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@types/markdown-it": "^13.0.5",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.52.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "wrangler": "^3.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "markdown-it@13.0.2": "patches/markdown-it@13.0.2.patch",
      "gray-matter@4.0.3": "patches/gray-matter@4.0.3.patch",
      "markdown-it-shikiji@0.6.10": "patches/markdown-it-shikiji@0.6.10.patch",
      "@remix-run/dev@2.2.0": "patches/@remix-run__dev@2.2.0.patch"
    }
  }
}